#include <NsMath/Utils.h>


namespace Noesis
{

////////////////////////////////////////////////////////////////////////////////////////////////////
Point::Point(): Vector2f(0.0f, 0.0f)
{
}

////////////////////////////////////////////////////////////////////////////////////////////////////
Point::Point(float x, float y): Vector2f(x, y)
{
}

////////////////////////////////////////////////////////////////////////////////////////////////////
Point::Point(const Pointi& point): Vector2f((float)point.x, (float)point.y)
{
}

////////////////////////////////////////////////////////////////////////////////////////////////////
Point::Point(const Vector2f& v): Vector2f(v)
{
}

////////////////////////////////////////////////////////////////////////////////////////////////////
Point::Point(const Size& size) : Vector2f(size.width, size.height)
{
}

////////////////////////////////////////////////////////////////////////////////////////////////////
Point::Point(const Point& point): Vector2f(point)
{
}

////////////////////////////////////////////////////////////////////////////////////////////////////
Point& Point::operator=(const Point& point)
{
    x = point.x;
    y = point.y;
    return *this;
}

////////////////////////////////////////////////////////////////////////////////////////////////////
Pointi::Pointi(): Vector2i(0, 0)
{
}

////////////////////////////////////////////////////////////////////////////////////////////////////
Pointi::Pointi(int x, int y): Vector2i(x, y)
{
}

////////////////////////////////////////////////////////////////////////////////////////////////////
Pointi::Pointi(const Point& p): Vector2i(Round(p.x), Round(p.y))
{
}

////////////////////////////////////////////////////////////////////////////////////////////////////
Pointi::Pointi(const Vector2i& v): Vector2i(v)
{
}

////////////////////////////////////////////////////////////////////////////////////////////////////
Pointi::Pointi(const Sizei& size) : Vector2i(size.width, size.height)
{
}

////////////////////////////////////////////////////////////////////////////////////////////////////
Pointi::Pointi(const Pointi& point): Vector2i(point)
{
}

////////////////////////////////////////////////////////////////////////////////////////////////////
Pointi& Pointi::operator=(const Pointi& point)
{
    x = point.x;
    y = point.y;
    return *this;
}

}
