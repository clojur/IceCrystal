    </node>
    <node flags="object">
        <translate x="0" y="0" z="-2"/>
        <rotatez angle="180"/>
        <mesh id="geometry" value="plane.mesh"/>
        <module id="material" value="texturedPlastic"/>
        <method id="draw" value="objectMethod"/>
    </node>
